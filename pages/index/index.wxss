/**index.wxss**/
.title{
  margin-top:0;
  font-size:1.5rem;
  line-height: 3rem;
}
.music-box{
  border-top: 1rpx solid #ccc;
  padding:10px 10px; 
}
.music-item{
  padding:10px 10px;
}
.music-item text{
  width:50%;
  padding:0 10px;
  background: white;
}
.bottom-box{
  position:fixed;
  bottom:0;
  width:100%;
  border:1px solid #ccc;
  height:60px;
  line-height: 60px;
  font-size:0px;
  box-shadow: 1 1 5 10px 10px black;
}
.switch-on{
  margin-top:5px;
  float: left;
  left:20px;
  width:50px;
  height:50px;
  background:url(https://cloud-minapp-21791.cloud.ifanrusercontent.com/1gKNL2AL6GujgkKC.png) no-repeat center;
  background-size:50px 50px;
  border:1px solid #ccc;
  border-radius:50%;
  box-shadow: 1 1 5 10px 10px black;
}
.music-info{
  padding-left:100px;
  border:1px solid red;
}
.play-name{
  font-size:20px;
  line-height: 32px;
  height:32px;
}
.play-singer{
  font-size:14px;
  line-height: 24px;
  height:24px;
}
.play-image{
  position:fixed;
  bottom:0;
  z-index:2;
  right:20px;
  width:60px;
  height:60px;
  background:url(https://cloud-minapp-21791.cloud.ifanrusercontent.com/1gKNL2AL6GujgkKC.png) no-repeat center;
  background-size:60px 60px;
  border:1px solid red;
  box-shadow: 1 1 5 10px 10px black;
}